<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:padding="10dp">

    <TextView
        android:text="최저임금"
        android:id="@+id/TextView01"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/minimumwage"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:inputType="number" />

    <TextView
        android:text="기초액"
        android:id="@+id/TextView02"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/basisamount"
        android:layout_width="match_parent"
        android:textColor="@color/colorWhite"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:inputType="number" />
    <!--
        <TextView android:text="ID" android:id="@+id/TextView03"  android:textColor="@color/colorWhite"
            android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        <EditText android:id="@+id/image3" android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginRight="10dp" />
    -->

</LinearLayout>

